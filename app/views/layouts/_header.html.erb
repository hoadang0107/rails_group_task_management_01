<header class="header">

  <!-- Top Bar -->
  <% unless logged_in? %>
  <% end %>

  <!-- Header Content -->
  <div class="header_container">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="header_content d-flex flex-row align-items-center justify-content-start">
            <div class="logo_container">
              <%= link_to root_path do %>
                <div class="logo_text">Find<span>Job</span></div>
              <% end %>
            </div>
            <nav class="main_nav_contaner ml-auto">
              <ul class="main_nav">
                <li class="active"><%= link_to t("static_pages.home.title"), root_path %></li>
                
                <% if logged_in? %>
                <li class="dropdown">
                  <%= link_to "#", {class: "dropdown-toggle", "data-toggle": "dropdown"} do %>
                    <%= current_user.name %> <b class="caret"></b>
                  <% end %>
                  <ul class="dropdown-menu">
                    <li><%= link_to t("profile.profile"), current_user %></li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to t("profile.logout"), logout_path, method: :delete %>
                    </li>
                  </ul>
                </li>
                <% else %>
                <li><%= link_to "Login", login_path %></a></li>
                <li><%= link_to "Signup", signup_path %></a></li>
                <% end %>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
