<% provide :title, t(".title_edit") %>
<div class="row">
  <div class="container">
    <div class="card card-container">
      <center><h3><%= t ".update_your_profile" %></h3></center>
      <%= form_for @user, html: {class: "form-signin"} do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <%= f.text_field :name, class: "form-control", placeholder: t("users.new.name") %>
        <%= f.email_field :email, class: "form-control", :disabled => true, placeholder: t("users.new.email_address") %>
        <%= f.password_field :password, class: "form-control", placeholder: t("users.new.password") %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: t("users.new.password_confirmation") %>
        <%= f.text_field :phonenumber, class: "form-control", placeholder: 'Phone number'%>
        <%= f.text_field :address, class: "form-control", placeholder: 'Address'%>
        
        <div class="gravatar_edit">
          <%= gravatar_for @user %>
          <%= link_to t(".change"), "http://gravatar.com/emails", target: "_blank" %>
        </div>
        <%= f.submit t(".save_changes"), class: "btn btn-lg btn-primary btn-block btn-signin" %>

        <%= link_to "Back", :back, class: "btn btn-block" %>
      <% end %>
    </div>
  </div>

</div>
